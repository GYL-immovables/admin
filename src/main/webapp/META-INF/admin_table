create table admin(
aidx int unsigned auto_increment not null comment "자동증가값",
aid char(50) not null comment "관리자아이디",
apw varchar(50) not null comment "md5패스워드",
aname char(40) not null comment "관리자이름",
aemail varchar(50) not null comment "관리자이메일",
atel char(11) not null comment "관리자전화번호",
dept enum('임원','전산팀','디자인팀','CS팀','MD팀') not null comment "부서",
rspofc enum('대표','부장','팀장','과장','대리','사원') not null default '사원' comment "직책",
adate timestamp not null default current_timestamp comment "가입신청날짜",
primary key (aidx),
unique (aid),
unique (aemail),
unique (atel)
)